{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "noPropertyAccessFromIndexSignature": true,

    "baseUrl": ".",
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}

